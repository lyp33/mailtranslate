<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="MailApp">

  <Id>12345678-1234-1234-1234-123456789012</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Email Translator</ProviderName>
  <DefaultLocale>zh-CN</DefaultLocale>
  <DisplayName DefaultValue="邮件翻译助手" />
  <Description DefaultValue="将邮件内容翻译为中文" />
  <SupportUrl DefaultValue="https://www.baidu.com" />

  <AppDomains>
    <AppDomain>https://mailtranslate.vercel.app</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://mailtranslate.vercel.app/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" />
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">

    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <Description resid="residAppDescription" />
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">

          <DesktopFormFactor>
            <FunctionFile resid="residFunctions" />

            <ExtensionPoint xsi:type="MessageReadCommandSurface">

              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="residGroupLabel" />

                  <Control xsi:type="Button" id="msgReadTranslateButton">
                    <Label resid="residTranslateButtonLabel" />
                    <Supertip>
                      <Title resid="residTranslateButtonTitle" />
                      <Description resid="residTranslateButtonDesc" />
                    </Supertip>
                    <Action xsi:type="ShowTaskpane">
                      <TaskpaneId>Button1TaskpaneId</TaskpaneId>
                      <SourceLocation resid="residTaskpaneUrl" />
                    </Action>
                  </Control>

                </Group>
              </OfficeTab>

            </ExtensionPoint>
          </DesktopFormFactor>

        </Host>
      </Hosts>

      <Resources>
        <bt:Strings>
          <bt:String id="residAppDescription" DefaultValue="将邮件内容翻译为中文"/>
          <bt:String id="residGroupLabel" DefaultValue="翻译工具"/>
          <bt:String id="residTranslateButtonLabel" DefaultValue="翻译邮件"/>
          <bt:String id="residTranslateButtonTitle" DefaultValue="翻译邮件内容"/>
          <bt:String id="residTranslateButtonDesc" DefaultValue="点击将当前邮件翻译为中文"/>
        </bt:Strings>
        <bt:Urls>
          <bt:Url id="residFunctions" DefaultValue="https://mailtranslate.vercel.app/functions.html" />
          <bt:Url id="residTaskpaneUrl" DefaultValue="https://mailtranslate.vercel.app/taskpane.html" />
        </bt:Urls>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>

</OfficeApp>
